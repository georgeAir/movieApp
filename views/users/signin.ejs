  			<input type="text" name="username" id="username">
  		</fieldset>

  		<fieldset class="newField">
  			<label for="password">Password:</label>
  			<input type="password" name="password" id="password">
  		</fieldset>

  		<input type="submit" value="Sign In">
  	</form>

