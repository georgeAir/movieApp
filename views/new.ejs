<%- include('./partials/header.ejs') %>

<h1>Add a Horror Film</h1>

<form action="/home" method="POST">

  <fieldset>
      <label for=“img”>Image</label>
      <input type=“url” name=“img”
      placeholder=“Enter”>
  </fieldset>

  <fieldset>
    <label for="title">Title:</label>
    <input type="text" name="title" placeholder="Enter new film name">
  </fieldset>

  <fieldset>
    <label for="synopsis">Synopsis:</label>
    <input type="text" name="synopsis" placeholder="synopsis for film">
  </fieldset>

  <fieldset>
    <label for="personalReview">Personal Review:</label>
    <input type="text" name="personalReview" placeholder="Enter Personal Review">
  </fieldset>

  <fieldset>
    <label for="durationOfFilm">Duration Of Film:</label>
    <input type="text" name="durationOfFilm" placeholder="Enter how long the movie is">
  </fieldset>

  <fieldset>
    <label for="streamableOn">Streamable On:</label>
    <input type="text" name="streamableOn" placeholder="Where can you watch it">
  </fieldset>


  <button type="submit">Click to add Film.</button>
</form>



